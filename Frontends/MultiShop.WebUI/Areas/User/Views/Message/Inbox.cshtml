@using MultiShop.DtoLayer.MessageDtos
@model List<ResultInboxMessageDto>
@{
	ViewData["Title"] = "Inbox";
	Layout = "~/Areas/User/Views/UserLayout/Index.cshtml";
	int count = 0;
}

<h1>
	<div class="main-panel">
		<div class="content-wrapper">
			<div class="row">
				<div class="col-lg-12 grid-margin stretch-card">
					<div class="card">
						<div class="card-body">
							<h4 class="card-title">Basic Table</h4>
							<p class="card-description">
								Add class <code>.table</code>
							</p>
							<div class="table-responsive pt-3">
								<table class="table table-bordered">
									<thead>
										<tr>
											<th>#</th>
											<th>Gönderen</th>
											<th>Konu</th>
											<th>Tarih</th>
											<th>Durum</th>
											<th>Sil</th>
											<th>Aç</th>
										</tr>
									</thead>
									<tbody>
										@foreach (var item in Model)
										{
											count++;
											
											<tr class="">
												<td>@count</td>
												<td>@item.SenderId</td>
												<td>@item.Subject</td>
												<td>@(((DateTime)item.SendDate).ToString("dd MMM yyyy"))</td>
												<td>@item.IsRead</td>
												<td><a href="#" class="btn btn-warning">Sil</a></td>
												<td><a href="#" class="btn btn-info">Aç</a></td>
											</tr>
										}


									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>


			</div>
		</div>
	

	</div>
</h1>

