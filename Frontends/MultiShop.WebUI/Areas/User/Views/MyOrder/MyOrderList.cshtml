@using MultiShop.DtoLayer.OrderDtos.OrderOrderingDtos
@model List<ResultOrderingByUserIdDto>
@{
	ViewData["Title"] = "MyOrderList";
	Layout = "~/Areas/User/Views/UserLayout/Index.cshtml";
	int count = 0;
	string tableRefColor = "";
}

<div class="main-panel">
	<div class="content-wrapper">
		<div class="row">
			<div class="col-lg-12 grid-margin stretch-card">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Basic Table</h4>
						<p class="card-description">
							Add class <code>.table</code>
						</p>
						<div class="table-responsive pt-3">
							<table class="table table-bordered">
								<thead>
									<tr>
										<th>#</th>
										<th>Toplam Fiyat</th>
										<th>Tarih</th>
										<th>Detaylar</th>
									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model)
									{
										count++;
										switch (count % 6)
										{
											case 0:
												tableRefColor = "table-info";
												break;
											case 1:
												tableRefColor = "table-warning";
												break;
											case 2:
												tableRefColor = "table-danger";
												break;
											case 3:
												tableRefColor = "table-success";
												break;
											case 4:
												tableRefColor = "table-primary";
												break;
											case 5:
												tableRefColor = "table-secondary";
												break;
											case 6:
												tableRefColor = "table-dark";
												break;
										}
										<tr class="@tableRefColor">
											<td>@count</td>
											<td>@item.TotalPrice</td>
											<td>@(((DateTime)item.OrderDate).ToString("dd MMM yyyy"))</td>
											<td><a href="#" class="btn btn-warning">Sipariş Detayları</a></td>
										</tr>
									}


								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>


		</div>
	</div>
	@* <!-- content-wrapper ends -->
	<!-- partial:../../partials/_footer.html -->
	<footer class="footer">
	<div class="card">
	<div class="card-body">
	<div class="d-sm-flex justify-content-center justify-content-sm-between">
	<span class="text-muted d-block text-center text-sm-left d-sm-inline-block">Copyright © bootstrapdash.com 2020</span>
	<span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center"> Free <a href="https://www.bootstrapdash.com/" target="_blank">Bootstrap dashboard templates</a> from Bootstrapdash.com</span>
	</div>
	</div>
	</div>
	</footer>
	<!-- partial --> *@
</div>
