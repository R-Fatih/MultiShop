@using MultiShop.DtoLayer.CommentsDtos
@model UpdateCommentDto
@{
    ViewData["Title"] = "CreateComment";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="content-wrapper">
	<!-- Content Header (Page header) -->
	@await Component.InvokeAsync("_AdminLayoutMainSectionComponentPartial")

	<!-- Main content -->
	<section class="content container-fluid">
		<div class="row">
			<div class="col-md-12">
				<div class="chart-box">
					<h4>@ViewBag.title2</h4>
					<div id="example_filter" class="dataTables_filter pull-right">
					</div>
					
					<form method="post">
						<input asp-for="UserCommentId" type="hidden" />
						<input asp-for="NameSurname" type="hidden" />
						<input asp-for="Email" type="hidden" />
						<input asp-for="ImageUrl" type="hidden" />
						<input asp-for="ProductId" type="hidden" />
						<input asp-for="CreatedDate" type="hidden" />
						<div class="form-group">
							<label>CommentDetail</label>
							<input asp-for="CommentDetail" type="text" class="form-control" />
						</div>
						<div class="form-group">
							<label>Rating</label>
							<input asp-for="Rating" type="number" class="form-control" />
						</div>
					


						<button class="btn btn-primary">Kaydet</button>
					</form>

					

				</div>
			</div>
		</div>
	</section>
	<!-- content -->
</div>

