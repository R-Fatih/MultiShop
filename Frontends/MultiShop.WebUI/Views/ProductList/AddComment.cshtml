@using MultiShop.DtoLayer.CommentsDtos
@model CreateCommentDto
<div class="col-md-6">
	<h4 class="mb-4">Yorum bırakın</h4>
	<small>Mail adresiniz kimseyle paylaşılmacaktır, * yerler zorunludur.</small>
	<div class="d-flex my-3">
		<p class="mb-0 mr-2">Puanınız * :</p>
		<div class="text-primary">
			@for (int i = 0; i < 5; i++)
			{
				<i class="far fa-star star-icon" id="@i" onclick="toggleStar(this,@i)"></i>
			}
		</div>
	</div>
	<form method="post" asp-action="AddComment" asp-controller="ProductList">
		<input asp-for="Rating" id="rating" name="Rating" type="hidden" />

		<input asp-for=ProductId type="hidden"/>
		<div class="form-group">
			<label for="name">Adınız Soyadınız *</label>
			<input asp-for=NameSurname type="text" class="form-control" id="name">
		</div>
		<div class="form-group">
			<label for="email">Mail adresiniz *</label>
			<input asp-for=Email type="email" class="form-control" id="email">
		</div>
		<div class="form-group">
			<label for="message">Yorumunuz *</label>
			<textarea asp-for=CommentDetail id="message" cols="30" rows="5" class="form-control"></textarea>
		</div>
		<div class="form-group mb-0">
			<input type="submit" value="Yorum bırakın" class="btn btn-primary px-3">
		</div>
	</form>
</div>