@using MultiShop.DtoLayer.BasketDtos
@model BasketTotalDto
<div class="col-lg-4">
    <form class="mb-30" asp-controller="Discount" asp-action="ConfirmDiscountCoupon">
        <div class="input-group">
            <input name="Code" value="@ViewBag.code" type="text" class="form-control border-0 p-4" placeholder="Kupon kodu girin">
            <div class="input-group-append">
                <button class="btn btn-primary">Kodu onayla</button>
                <br />
                <h3> </h3>
            </div>
        </div>
    </form>
    <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Sipariş özeti</span></h5>
    <div class="bg-light p-30 mb-5">
        <div class="border-bottom pb-2">
            <div class="d-flex justify-content-between mb-3">
                <h6>Kdv tutarı</h6>
                <h6>@(Convert.ToInt32(Model.TotalPrice) * 0.2)₺</h6>
            </div>
            <div class="d-flex justify-content-between">
                <h6 class="font-weight-medium">Kargo</h6>
                <h6 class="font-weight-medium">100₺</h6>
            </div>
        </div>
        <div class="pt-2">
            <div class="d-flex justify-content-between mt-2">
                <h6 class="font-weight-medium">Toplam</h6>
                <h6 class="font-weight-medium">@(Model.TotalPrice + 100)₺</h6>
            </div>
            <div class="d-flex justify-content-between mt-2">
                <h6 class="font-weight-medium">İndirim oranı</h6>
                <h6 class="font-weight-medium">@ViewBag.discrate%</h6>
            </div>
            <div class="d-flex justify-content-between mt-2">
                <h5>İndirimli yeni fiyat</h5>
                <h5>@ViewBag.newprice₺</h5>
            </div>
            <button class="btn btn-block btn-primary font-weight-bold my-3 py-3">Ödeme ekranı</button>
        </div>
    </div>
</div>